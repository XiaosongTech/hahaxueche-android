<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_startscreen_bk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="17dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="17dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="@string/sLSignUp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_avatar_btn"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sLSignUpTips"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="20dp"
                android:textColor="@color/sLTextHintLight"/>
        </LinearLayout>

        <EditText
            android:id="@+id/id_user_name_edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:gravity="center"
            android:background="@drawable/edittext_button"
            android:hint="@string/sLEnterName"
            android:singleLine="true"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/sLTextHintHeavier"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/id_address_select_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/edittext_button"
            >
            <EditText
                android:id="@+id/id_user_address_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/sLChoseLocation"
                android:inputType="phone"
                android:maxLength="6"
                android:singleLine="true"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/app_theme_color"
                android:textColorHint="@color/sLTextHintHeavier"
                android:drawableRight="@drawable/ic_chose_add_popdown"
                android:layout_marginRight="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/id_regist_down_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/sLFinish"
            android:textColor="@android:color/white"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
