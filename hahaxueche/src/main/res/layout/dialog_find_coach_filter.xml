<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/fCDistanceFilter"
        android:textColor="@color/tab_bottom_gray"
        android:textSize="14sp" />

    <com.hahaxueche.ui.widget.comboSeekBar.ComboSeekBar
        android:id="@+id/cbs_distinct_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:dotRadius="8dp"
        app:multiline="false"
        app:myColor="@color/app_back_gray_light"
        app:selectedLineHeight="5dp"
        app:selectedLintColor="@color/app_theme_color"
        app:textSize="12sp"
        app:thumb="@drawable/seek_bar_circle"
        app:unselectedLineHeight="5dp" />

    <LinearLayout
        android:id="@+id/lly_fc_distance_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/fCPriceFilter"
        android:textColor="@color/tab_bottom_gray"
        android:textSize="14sp" />

    <com.hahaxueche.ui.widget.comboSeekBar.ComboSeekBar
        android:id="@+id/cbs_price_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:dotRadius="8dp"
        app:multiline="false"
        app:myColor="@color/app_back_gray_light"
        app:selectedLineHeight="5dp"
        app:selectedLintColor="@color/app_theme_color"
        app:textSize="12sp"
        app:thumb="@drawable/seek_bar_circle"
        app:unselectedLineHeight="5dp" />

    <LinearLayout
        android:id="@+id/lly_fc_price_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fCOnlyShowGoldenCoach" />

        <Switch
            android:id="@+id/sw_golden_coach_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="38dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_button"
            android:track="@drawable/ic_screen_switch_bk" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/onlyShowVIPCoach" />

        <Switch
            android:id="@+id/sw_vip_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="38dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_button"
            android:track="@drawable/ic_screen_switch_bk" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fCOnlyShowGroupBuy" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="38dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_button"
            android:track="@drawable/ic_screen_switch_bk" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_license_type_c1"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:text="@string/fCManualGear"
            android:textColor="@color/tab_bottom_gray"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb_license_type_c2"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/fCAutoGear"
            android:textColor="@color/tab_bottom_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_back_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fc_filter_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/fCCancel"
            android:textColor="@color/fCTxtOrange"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="@color/app_back_gray_light" />

        <Button
            android:id="@+id/btn_fc_filter_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/fCSure"
            android:textColor="@color/fCTxtGreen"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>