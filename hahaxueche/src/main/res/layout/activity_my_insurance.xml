<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_gray_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/lly_no_purchase"
            layout="@layout/my_insurance_no_purchase"
            android:visibility="gone" />

        <include
            android:id="@+id/lly_no_upload_info"
            layout="@layout/my_insurance_no_upload_info"
            android:visibility="gone" />

        <include
            android:id="@+id/lly_success"
            layout="@layout/my_insurance_success"
            android:visibility="visible" />

        <include layout="@layout/my_insurance_claim_scope" />

        <include layout="@layout/my_insurance_claim_method" />
    </LinearLayout>
</ScrollView>