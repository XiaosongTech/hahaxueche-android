<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="距离筛选"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />

    <com.hahaxueche.ui.widget.comboSeekBar.ComboSeekBar
        android:id="@+id/cbs_distinct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:dotRadius="6dp"
        app:multiline="false"
        app:myColor="@color/app_theme_color"
        app:selectedLineHeight="5dp"
        app:selectedLintColor="@color/app_theme_color"
        app:selectedTextColor="@color/haha_gray"
        app:textSize="12sp"
        app:thumb="@drawable/seek_bar_circle"
        app:thumbHeight="20dp"
        app:thumbWidth="20dp"
        app:unSelectedColor="@color/haha_gray_divider"
        app:unselectedLineHeight="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/haha_gray_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="价格筛选"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />

    <com.hahaxueche.ui.widget.comboSeekBar.ComboSeekBar
        android:id="@+id/cbs_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:dotRadius="6dp"
        app:multiline="false"
        app:myColor="@color/app_theme_color"
        app:selectedLineHeight="5dp"
        app:selectedLintColor="@color/app_theme_color"
        app:selectedTextColor="@color/haha_gray"
        app:textSize="12sp"
        app:thumb="@drawable/seek_bar_circle"
        app:thumbHeight="20dp"
        app:thumbWidth="20dp"
        app:unSelectedColor="@color/haha_gray_divider"
        app:unselectedLineHeight="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/haha_gray_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="只显示金牌教练"
            android:textColor="@color/haha_gray"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/sw_golden_coach_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:switchMinWidth="38dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_button"
            android:track="@drawable/ic_screen_switch_bk" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/haha_gray_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="只显示VIP教练"
            android:textColor="@color/haha_gray"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/sw_vip_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:switchMinWidth="38dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_button"
            android:track="@drawable/ic_screen_switch_bk" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/haha_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cb_license_type_c1"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="手动档(C1)"
                android:textColor="@color/haha_gray"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cb_license_type_c2"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="自动档(C2)"
                android:textColor="@color/haha_gray"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginTop="15dp"
        android:background="@color/haha_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="取消"
            android:textColor="@color/haha_orange"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/haha_gray_background" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="确定"
            android:textColor="@color/haha_green"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
