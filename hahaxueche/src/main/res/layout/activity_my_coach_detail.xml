<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fCBackgroundGray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_theme_color">

        <ImageButton
            android:id="@+id/ibtn_my_coach_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_my_coach_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fCCoachDetail"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_my_coach_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_mycoach_sharecoach" />
    </RelativeLayout>

    <com.hahaxueche.ui.widget.monitorScrollView.MonitorScrollView
        android:id="@+id/msv_my_coach_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="20dp">


                <com.hahaxueche.ui.widget.imageSwitcher.ImageSwitcher
                    android:id="@+id/is_my_cd_coach_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.hahaxueche.ui.widget.imageSwitcher.ImageSwitcher>


                <com.hahaxueche.ui.widget.circleImageView.CircleImageView
                    android:id="@+id/cir_my_cd_coach_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_coach_ava"
                    app:border_color="@android:color/white"
                    app:border_width="3dp">

                </com.hahaxueche.ui.widget.circleImageView.CircleImageView>

                <LinearLayout
                    android:id="@+id/fl_my_cd_coach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/cir_my_cd_coach_avatar"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_cd_coach_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:textColor="@color/fCTxtBlack"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_my_cd_is_golden_coach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/ic_auth_golden_big" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_cd_coach_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fl_my_cd_coach_name"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/fCTxtGray"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/baseInfo"
                    android:textColor="@color/app_theme_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/fCViewGray" />

                <RelativeLayout
                    android:id="@+id/rly_my_coach_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contactWay"
                        android:textColor="@color/fCTxtGray"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_my_coach_contact_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_coachmsg_more_arrow" />

                    <TextView
                        android:id="@+id/tv_my_cd_coach_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@id/iv_my_coach_contact_1"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/fCViewGray" />

                <RelativeLayout
                    android:id="@+id/rly_my_coach_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_my_cd_coach_location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainFieldAddress"
                        android:textColor="@color/fCTxtGray"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_my_coach_location1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_coachmsg_more_arrow" />

                    <TextView
                        android:id="@+id/tv_my_cd_coach_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@id/iv_my_coach_location1"
                        android:layout_toRightOf="@id/tv_my_cd_coach_location_label"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/courseInfo"
                    android:textColor="@color/app_theme_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/fCViewGray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/courseType"
                        android:textColor="@color/fCTxtGray"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_my_coach_course_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/fCViewGray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/teachCourse"
                        android:textColor="@color/fCTxtGray"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_my_coach_teach_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/fCViewGray" />

                <RelativeLayout
                    android:id="@+id/rly_my_coach_fee_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/courseFeeAndDetail"
                        android:textColor="@color/fCTxtGray"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_my_coach_fee_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_coachmsg_more_arrow" />

                    <TextView
                        android:id="@+id/tv_my_coach_fee_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@id/iv_my_coach_fee_detail"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </com.hahaxueche.ui.widget.monitorScrollView.MonitorScrollView>

</LinearLayout>