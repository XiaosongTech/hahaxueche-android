<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_gray_background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/coach_detail_coach_info" />

            <include layout="@layout/my_coach_detail_base_info" />

            <include layout="@layout/my_coach_detail_course_info" />

            <include layout="@layout/my_coach_detail_peer_coaches" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>