<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_startscreen_bk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_register_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="请实名注册以便获得更好的服务体验"
            android:textColor="@color/haha_white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rect_bg_white_bd_appcolor_corner"
            android:gravity="center"
            android:hint="请输入你的姓名"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:maxLines="1"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/haha_orange_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rect_bg_white_bd_appcolor_corner"
            android:drawableRight="@drawable/ic_chose_add_popdown"
            android:gravity="center"
            android:hint="选择的你的所在地"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/haha_orange_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rect_bg_trans_bd_white_corner"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="开启学车之旅~"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_coupon"
            android:text="有优惠码"
            android:textColor="@color/haha_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/input"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/app_theme_color"
            android:visibility="gone" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>