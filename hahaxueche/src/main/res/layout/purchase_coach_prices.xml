<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="选择班级"
        android:textColor="@color/haha_gray_text"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rly_normal_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/haha_gray_divider" />

        <ImageView
            android:id="@+id/iv_select_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_cashout_unchack_btn" />

        <TextView
            android:id="@+id/tv_normal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_select_normal"
            android:textColor="@color/app_theme_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_normal_price_label"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_normal_price"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/tv_normal_price"
            android:background="@drawable/rect_bg_appcolor_ssm"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="超值"
            android:textColor="@color/haha_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_old_normal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_normal_price"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_normal_price_label"
            android:text="门市价："
            android:textColor="@color/haha_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_normal_price_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_normal_price"
            android:layout_below="@id/tv_normal_price"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="四人一车、性价比高"
            android:textColor="@color/haha_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_normal_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/rect_bg_trans_bd_appcolor_ssm"
            android:padding="3dp"
            android:text="价格明细"
            android:textColor="@color/app_theme_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_vip_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/haha_gray_divider" />

        <ImageView
            android:id="@+id/iv_select_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_cashout_unchack_btn" />

        <TextView
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_select_vip"
            android:textColor="@color/app_theme_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vip_price_label"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_vip_price"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/tv_vip_price"
            android:background="@drawable/rect_bg_appcolor_ssm"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="VIP"
            android:textColor="@color/haha_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_old_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_vip_price"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_vip_price_label"
            android:text="门市价："
            android:textColor="@color/haha_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_vip_price_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_vip_price"
            android:layout_below="@id/tv_vip_price"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="一人一车、极速拿证"
            android:textColor="@color/haha_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vip_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/rect_bg_trans_bd_appcolor_ssm"
            android:padding="3dp"
            android:text="价格明细"
            android:textColor="@color/app_theme_color"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>