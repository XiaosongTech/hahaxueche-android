<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_orange_fade">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_bg_appcolor_sm"
            android:lineSpacingMultiplier="1.2"
            android:padding="10dp"
            android:text="@string/upload_id_card_hints"
            android:textColor="@color/haha_white" />

        <RelativeLayout
            android:id="@+id/rly_id_card_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/haha_white">

            <TextView
                android:id="@+id/tv_id_card_face"
                android:layout_width="85dp"
                android:layout_height="142dp"
                android:background="@color/haha_gray_background"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="点击上传\n身份证\n正面"
                android:textColor="@color/haha_gray_text"
                android:textSize="14sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_id_card_face"
                android:layout_width="167dp"
                android:layout_height="102dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_id_card_face"
                fresco:placeholderImage="@drawable/idcard_a" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rly_id_card_face_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/haha_white">

            <TextView
                android:id="@+id/tv_id_card_face_back"
                android:layout_width="85dp"
                android:layout_height="142dp"
                android:background="@color/haha_gray_background"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="点击上传\n身份证\n反面"
                android:textColor="@color/haha_gray_text"
                android:textSize="14sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_id_card_face_back"
                android:layout_width="167dp"
                android:layout_height="102dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_id_card_face_back"
                fresco:placeholderImage="@drawable/idcard_b" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:text="*请确保您的二代身份证处于有效期内\n**所以信息已经经过加密处理，保证您的信息安全"
            android:textColor="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_bg_appcolor_corner"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="确认提交"
            android:textColor="@color/haha_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_later_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="稍后提交"
            android:textColor="@color/haha_gray_text" />
    </LinearLayout>
</ScrollView>