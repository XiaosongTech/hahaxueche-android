<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/haha_gray_divider" />

    <TextView
        android:id="@+id/tv_no_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="不限"
        android:textColor="@color/haha_gray" />

    <View
        android:id="@+id/vw_no_limit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/app_theme_color"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rly_C1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp">

        <TextView
            android:id="@+id/tv_C1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="C1手动档"
            android:textColor="@color/haha_gray" />

        <TextView
            android:id="@+id/tv_what_is_C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_C1_label"
            android:background="@drawable/rect_bg_gray_bd_gray_ssm"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/app_theme_color" />
    </RelativeLayout>

    <View
        android:id="@+id/vw_C1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/app_theme_color"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rly_C2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp">

        <TextView
            android:id="@+id/tv_C2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="C2自动档"
            android:textColor="@color/haha_gray" />

        <TextView
            android:id="@+id/tv_what_is_C2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_C2_label"
            android:background="@drawable/rect_bg_gray_bd_gray_ssm"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/app_theme_color" />
    </RelativeLayout>

    <View
        android:id="@+id/vw_C2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/app_theme_color"
        android:visibility="invisible" />
</LinearLayout>