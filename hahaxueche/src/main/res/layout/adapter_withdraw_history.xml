<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="提现推荐奖励"
            android:textColor="@color/haha_gray_heavy"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_withdraw_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_student_name"
            android:layout_below="@id/tv_student_name"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:text="03-28 14:00"
            android:textColor="@color/haha_gray_heavy"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_refer_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="￥50"
            android:textColor="@color/app_theme_color"
            android:textSize="30sp" />
    </RelativeLayout>
</LinearLayout>