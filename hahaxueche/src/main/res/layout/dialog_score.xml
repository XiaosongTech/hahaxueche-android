<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="快来给你的教练评分吧!"
        android:textColor="@color/haha_gray_dark"
        android:textSize="18sp" />

    <com.hahaxueche.ui.widget.scoreView.ClickScoreView
        android:id="@+id/csv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

    </com.hahaxueche.ui.widget.scoreView.ClickScoreView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_marginTop="32dp"
        android:background="@color/haha_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_score_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="稍后评分"
            android:textColor="@color/haha_orange"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/haha_gray_divider" />

        <TextView
            android:id="@+id/tv_dialog_score_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确认评分"
            android:textColor="@color/haha_green"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>