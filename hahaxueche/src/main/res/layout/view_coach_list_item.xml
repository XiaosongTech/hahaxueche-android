<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.hahaxueche.ui.widget.circleImageView.CircleImageView
            android:id="@+id/cir_coach_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_coach_ava">

        </com.hahaxueche.ui.widget.circleImageView.CircleImageView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp">

            <RelativeLayout
                android:id="@+id/rly_first_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/haha_black_light"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_is_golden_coach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/tv_coach_name"
                    android:src="@drawable/ic_auth_golden" />

                <include
                    android:id="@+id/lly_train_school"
                    layout="@layout/layout_train_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/iv_is_golden_coach" />

                <TextView
                    android:id="@+id/tv_coach_teach_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/haha_gray_heavy"
                    android:textSize="14sp" />
            </RelativeLayout>

            <com.hahaxueche.ui.widget.scoreView.ScoreView
                android:id="@+id/sv_coach_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rly_first_line"
                android:layout_below="@id/rly_first_line"
                android:layout_marginTop="6dp"></com.hahaxueche.ui.widget.scoreView.ScoreView>

            <TextView
                android:id="@+id/tv_coach_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/sv_coach_score"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/sv_coach_score"
                android:textColor="@color/app_theme_color"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lly_coach_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rly_first_line"
                android:layout_below="@id/sv_coach_score"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coach_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_list_local_btn"
                    android:drawablePadding="3dp"
                    android:textColor="@color/haha_gray_heavier"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/haha_gray_heavier"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_applaud_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/lly_coach_location"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_list_best_small"
                android:drawablePadding="3dp"
                android:textColor="@color/app_theme_color"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rly_actual_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/haha_gray_light" />

        <TextView
            android:id="@+id/tv_actual_label"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_back_orange_ssm"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="超值"
            android:textColor="@color/haha_white"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_actual_label"
            android:text="四人一车,性价比高"
            android:textColor="@color/haha_gray_heavy"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_coach_actual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_vip_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/haha_gray_light" />

        <TextView
            android:id="@+id/tv_vip_label"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_back_orange_ssm"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="VIP"
            android:textColor="@color/haha_white"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_vip_label"
            android:text="一人一车,极速拿证"
            android:textColor="@color/haha_gray_heavy"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>