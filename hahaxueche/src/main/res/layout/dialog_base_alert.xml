<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_base_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/haha_black_light"
        android:textSize="20sp" />

    <View
        android:id="@+id/vw_base_alert_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/haha_gray_light" />

    <TextView
        android:id="@+id/tv_base_alert_dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/app_theme_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_base_alert_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/haha_gray_heavier"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/haha_gray_light" />

    <TextView
        android:id="@+id/tv_base_alert_dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/IKnow"
        android:textColor="@color/haha_green"
        android:textSize="16sp" />
</LinearLayout>