<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_cell_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_bg_white_bd_appcolor_corner"
        android:gravity="center"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/haha_orange_light"
        android:textSize="16sp"
        android:maxLines="1" />

    <LinearLayout
        android:id="@+id/lly_auth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_bg_white_bd_appcolor_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_auth_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/haha_orange_light"
            android:textSize="16sp"
            android:maxLines="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/haha_orange_light" />

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重发"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_bg_white_bd_appcolor_corner"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/haha_orange_light"
        android:textSize="16sp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_get_auth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_bg_trans_bd_white_corner"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="获取验证码"
        android:textColor="@color/haha_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_bg_trans_bd_white_corner"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="登录"
        android:textColor="@color/haha_white"
        android:textSize="18sp" />
</LinearLayout>