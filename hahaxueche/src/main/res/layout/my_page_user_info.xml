<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mypage_bk" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_my_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        fresco:placeholderImage="@drawable/ic_mypage_ava"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/haha_white"
        fresco:roundingBorderWidth="4dp">

    </com.facebook.drawee.view.SimpleDraweeView>

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_my_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/haha_white"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_my_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="注册/登录"
        android:textColor="@color/haha_white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_student_name"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/tv_student_name"
        android:src="@drawable/ic_edit"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_student_phase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_student_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/haha_white"
        android:textSize="14sp" />
</RelativeLayout>