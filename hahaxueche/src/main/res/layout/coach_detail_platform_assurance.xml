<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/section_margin_top"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_coachmsg_localtion"
        android:drawablePadding="5dp"
        android:padding="20dp"
        android:text="平台保障"
        android:textColor="@color/app_theme_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/haha_gray_divider" />

    <LinearLayout
        android:id="@+id/lly_platform_assurance"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_badge_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_jinpaijiaolian"
            android:gravity="center"
            android:text="金牌教练"
            android:textColor="@color/haha_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_cheliangbaoxian"
            android:gravity="center"
            android:text="车辆保险"
            android:textColor="@color/haha_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_badge_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_xianxiangpeifu"
            android:gravity="center"
            android:text="先行赔付"
            android:textColor="@color/haha_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_fenduandakuan"
            android:gravity="center"
            android:text="分段打款"
            android:textColor="@color/haha_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_fenqidakuan"
            android:gravity="center"
            android:text="分期付款"
            android:textColor="@color/haha_gray"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_coachmsg_more_arrow" />
    </LinearLayout>
</LinearLayout>