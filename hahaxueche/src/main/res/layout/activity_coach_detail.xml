<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_gray_background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/coach_detail_coach_info" />

            <include layout="@layout/coach_detail_prices" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/section_margin_top"
                android:background="@color/haha_white"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@drawable/ic_coachmsg_classtype"
                    android:drawablePadding="5dp"
                    android:text="课程类型"
                    android:textColor="@color/app_theme_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_license_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/haha_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/coach_detail_training_field" />

            <include layout="@layout/coach_detail_other" />

            <include layout="@layout/coach_detail_training_time" />

            <include layout="@layout/coach_detail_peer_coaches" />

            <include layout="@layout/coach_detail_comments" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/haha_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/haha_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_free_try"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_theme_color"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="免费试学"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/haha_orange"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="确认并付款"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>