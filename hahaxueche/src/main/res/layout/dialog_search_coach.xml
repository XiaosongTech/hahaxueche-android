<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color">

        <EditText
            android:id="@+id/et_coach_name"
            android:layout_width="@dimen/search_edittext_width"
            android:layout_height="@dimen/search_edittext_height"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rect_back_white"
            android:drawableLeft="@drawable/icon_search_input"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:hint="@string/searchCoachName"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="7dp"
            android:textColor="@color/haha_black"
            android:textColorHint="@color/haha_gray_heavy"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/et_coach_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:padding="5dp"
            android:src="@drawable/icon_clear_out_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fly_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lly_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingTop="12dp"
                android:text="@string/historyRecord"
                android:textColor="@color/haha_gray_heavier"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/haha_gray_light" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>