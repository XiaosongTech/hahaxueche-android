<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fCShareToFriend"
        android:textColor="@color/fCTxtBlack"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_coachmsg_sharecoach_qq"
            android:gravity="center"
            android:text="@string/qq" />

        <TextView
            android:id="@+id/tv_share_qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_coachmsg_sharecoach_kongjian"
            android:gravity="center"
            android:text="@string/qzone" />

        <TextView
            android:id="@+id/tv_share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_coachmsg_sharecoach_wechat"
            android:gravity="center"
            android:text="@string/weixin" />

        <TextView
            android:id="@+id/tv_share_friend_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_coachmsg_sharecoach_friendgroup"
            android:gravity="center"
            android:text="@string/friend_circle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tab_bottom_gray_fade"/>
    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/app_theme_color"
        android:text="取消"/>
</LinearLayout>