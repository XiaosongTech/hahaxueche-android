<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_theme_color"
            android:paddingBottom="24dp"
            android:paddingLeft="25dp"
            android:paddingTop="24dp"
            android:text="￥2380限时团购，我要报名！"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ic_group_buy_close_btn" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/enrollInfo"
        android:textColor="@color/app_theme_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentHintName"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentContactWay"
        android:inputType="phone"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_group_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_corner_orange_heavy"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="@string/groupBuyRightNow"
        android:textColor="@color/haha_white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="活动截止日期为2016年6月1日，名额有限"
        android:textColor="@color/app_theme_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="团购名额抢购成功后，小哈客服会马上联系您"
        android:textColor="@color/app_theme_color"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="如有疑问，可直接拨打客服热线：400-001-6006"
        android:textColor="@color/app_theme_color"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:text="或联系客服QQ：3319762526"
        android:textColor="@color/app_theme_color"
        android:textSize="12sp" />


</LinearLayout>