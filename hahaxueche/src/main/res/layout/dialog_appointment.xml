<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_theme_color"
            android:paddingBottom="24dp"
            android:paddingLeft="25dp"
            android:paddingTop="24dp"
            android:text="免费试学"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ic_group_buy_close_btn" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="报名信息"
        android:textColor="@color/app_theme_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_real_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentHintName"
        android:singleLine="true"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentContactWay"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_appointment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fCAppointmentTime"
        android:textColor="@color/app_theme_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tv_first_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentFirstTime"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tv_second_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_corner_gray"
        android:gravity="center"
        android:hint="@string/fCAppointmentSecondTime"
        android:textColor="@color/app_theme_color"
        android:textColorHint="@color/fCTxtGrayFade"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/fCAppointmentRemarks"
        android:textColor="@color/app_theme_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_trail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_back_orange"
        android:gravity="center"
        android:text="立刻报名"
        android:textColor="@color/haha_white"
        android:textSize="16sp" />


</LinearLayout>