<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/section_margin_top"
    android:background="@color/haha_white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_satisfaction_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/ic_coachmsg_manyidu"
            android:drawablePadding="6dp"
            android:text="学员满意度"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_satisfaction_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_satisfaction_rate_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/haha_gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"
        android:background="@color/haha_gray_divider" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_coach_level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/ic_coachmsg_coachlevel"
            android:drawablePadding="6dp"
            android:text="教练认证等级"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_coach_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_coach_level_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_auth_golden"
            android:textColor="@color/haha_gray"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>