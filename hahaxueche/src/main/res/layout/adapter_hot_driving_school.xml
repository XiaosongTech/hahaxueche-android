<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@drawable/rect_bg_trans_bd_gray_corner_ssm"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_avatar"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:actualImageScaleType="focusCrop" />

    <FrameLayout
        android:id="@+id/frl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_avatar"
        android:layout_alignRight="@id/iv_avatar"
        android:layout_below="@id/iv_avatar"
        android:background="@color/haha_half_trans">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:textColor="@color/haha_white"
            android:textSize="12sp"
            app:minTextSize="8sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frl_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/haha_orange" />
</RelativeLayout>