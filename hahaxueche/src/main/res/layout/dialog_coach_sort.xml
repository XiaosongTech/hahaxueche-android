<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sort_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sort_auto_hold_btn"
        android:drawablePadding="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:text="智能排序"
        android:textColor="@color/app_theme_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sort_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sort_local_normal_btn"
        android:drawablePadding="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:text="距离最近"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sort_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sort_nice_normal_btn"
        android:drawablePadding="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:text="评价最多"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sort_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sort_price_normal_btn"
        android:drawablePadding="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:text="价格最低"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sort_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sort_zan_normal_btn"
        android:drawablePadding="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:text="点赞最多"
        android:textColor="@color/haha_gray"
        android:textSize="14sp" />
</LinearLayout>