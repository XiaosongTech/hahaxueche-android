<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_bg_white_bd_appcolor_sm">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_field_avatar"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_field_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_field_avatar"
        android:layout_toRightOf="@id/iv_field_avatar"
        android:textColor="@color/haha_gray_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_send_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_field_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_field_name"
        android:background="@drawable/rect_bg_appcolor_gradient_sm"
        android:padding="5dp"
        android:text="发我定位"
        android:textColor="@color/haha_white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_display_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_field_name"
        android:layout_below="@id/tv_field_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/haha_gray"
        android:textSize="12sp" />
</RelativeLayout>