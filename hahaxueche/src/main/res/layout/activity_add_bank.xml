<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_gray_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/haha_gray_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/haha_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_account_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:text="持卡人"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_account_name_label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tv_account_name_label"
                android:background="@null"
                android:hint="姓名"
                android:inputType="text"
                android:lines="1"
                android:padding="3dp"
                android:textColor="@color/haha_gray_dark"
                android:textColorHint="@color/haha_gray_text"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_below="@id/tv_account_name_label"
            android:background="@color/haha_gray_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:text="卡号"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_account_label"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tv_account_label"
                android:background="@null"
                android:hint="银行卡号"
                android:inputType="number"
                android:lines="1"
                android:padding="3dp"
                android:textColor="@color/haha_gray_dark"
                android:textColorHint="@color/haha_gray_text"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_below="@id/tv_account_label"
            android:background="@color/haha_gray_divider" />

        <RelativeLayout
            android:id="@+id/rly_open_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_open_bank_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:text="开户行"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_open_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_open_bank_label"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_open_bank_label"
                android:background="@null"
                android:lines="1"
                android:padding="3dp"
                android:text="请选择银行"
                android:textColor="@color/haha_gray_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_bg_appcolor_ssm"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="确认"
        android:textColor="@color/haha_white"
        android:textSize="18sp" />
</LinearLayout>