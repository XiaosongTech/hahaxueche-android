<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haha_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_theme_color">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加银行卡"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="请绑定持卡人本人的银行卡"
            android:textColor="@color/haha_gray_heavy"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/haha_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_account_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="3dp"
                    android:text="持卡人"
                    android:textColor="@color/haha_black_light"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_account_name_label"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_account_name_label"
                    android:background="@null"
                    android:hint="姓名"
                    android:inputType="text"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/haha_black_light"
                    android:textColorHint="@color/haha_gray_heavier"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@id/tv_account_name_label"
                android:background="@color/haha_gray_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_account_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="3dp"
                    android:text="卡号"
                    android:textColor="@color/haha_black_light"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_account_label"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_account_label"
                    android:background="@null"
                    android:hint="银行卡号"
                    android:inputType="text"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/haha_black_light"
                    android:textColorHint="@color/haha_gray_heavier"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@id/tv_account_label"
                android:background="@color/haha_gray_light" />

            <LinearLayout
                android:id="@+id/lly_bank"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_bank_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="3dp"
                    android:text="开户行"
                    android:textColor="@color/haha_black_light"
                    android:textSize="14sp" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sp_bank"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/haha_black_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@id/tv_account_label"
                android:background="@color/haha_gray_light" />

            <RelativeLayout
                android:id="@+id/rly_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_city_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="3dp"
                    android:text="开户地"
                    android:textColor="@color/haha_black_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_city_label"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_city_label"
                    android:background="@null"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="请选择开户城市"
                    android:textColor="@color/haha_gray_heavier"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_back_orange_sm"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="确认"
            android:textColor="@color/haha_white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>