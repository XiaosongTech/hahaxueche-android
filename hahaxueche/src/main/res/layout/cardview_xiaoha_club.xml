<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/haha_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rly_group_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_group_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tv_group_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/iv_group_buy"
                android:text="限时团购"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_group_buy"
                android:layout_below="@id/tv_group_buy"
                android:layout_marginTop="7dp"
                android:text="学车团购低价"
                android:textColor="@color/haha_gray_dark"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/haha_gray_background" />

        <RelativeLayout
            android:id="@+id/rly_test_lib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_test_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/exercise" />

            <TextView
                android:id="@+id/tv_test_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/iv_test_lib"
                android:text="在线题库"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_test_lib"
                android:layout_below="@id/tv_test_lib"
                android:layout_marginTop="7dp"
                android:text="随时想练就练"
                android:textColor="@color/haha_gray_dark"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/haha_gray_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rly_test_drive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_test_drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/car" />

            <TextView
                android:id="@+id/tv_test_drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/iv_test_drive"
                android:text="豪车试驾"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_test_drive"
                android:layout_below="@id/tv_test_drive"
                android:layout_marginTop="7dp"
                android:text="豪车免费试驾"
                android:textColor="@color/haha_gray_dark"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/haha_gray_background" />

        <RelativeLayout
            android:id="@+id/rly_skill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/skills" />

            <TextView
                android:id="@+id/tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/iv_skill"
                android:text="学车技巧"
                android:textColor="@color/haha_gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_skill"
                android:layout_below="@id/tv_skill"
                android:layout_marginTop="7dp"
                android:text="学车秘籍揭秘"
                android:textColor="@color/haha_gray_dark"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>