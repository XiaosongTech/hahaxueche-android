<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_startscreen_bk">


    <LinearLayout
        android:id="@+id/id_login_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="17dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageButton
                android:id="@+id/ibtn_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <TextView
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:text="@string/sLIdentifyCodeLogin"
                />
            <Button
                android:id="@+id/btn_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:text="@string/sLForgetPwd"
                android:textSize="14sp"
                android:textColor="@color/sLTextHint"
                />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:gravity="center"
            android:background="@drawable/edittext_button"
            android:hint="@string/sLPleaseEnterPhoneNumber"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/sLTextHint"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/lly_login_identify_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/edittext_button"
            >
            <EditText
                android:id="@+id/et_identify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/sLPleaseEnterIdentifyCode"
                android:inputType="phone"
                android:maxLength="6"
                android:singleLine="true"
                android:focusable="true"
                android:textColor="@color/app_theme_color"
                android:textColorHint="@color/sLTextHint"
                android:textSize="16sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/sLTextHint"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/btn_re_send_identify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sLReSend"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:textColor="@color/sLTextHint"
                android:textSize="16sp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:gravity="center"
            android:background="@drawable/edittext_button"
            android:hint="@string/sLPleaseEnterPWd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/app_theme_color"
            android:textColorHint="@color/sLTextHint"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_get_identify_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/sLGetIdentifyCode"
            android:textColor="@android:color/white"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/sLLogin"
            android:textColor="@android:color/white"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:textSize="18sp"/>
        <View android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tv_change_login_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:text="@string/sLUsePwdLogin"
            />

    </LinearLayout>

</LinearLayout>
