<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/app_theme_color</item>
        <!--文字颜色-->
        <item name="android:textColorPrimary">@color/haha_gray</item>
    </style>
    <style name="AppBaseThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/app_theme_color</item>
        <!--文字颜色-->
        <item name="android:textColorPrimary">@color/haha_gray</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <style name="AppThemeNoTitle" parent="@style/AppBaseThemeNoTitle">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
    </style>

</resources>
